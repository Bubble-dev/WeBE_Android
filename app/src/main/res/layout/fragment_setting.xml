<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.SettingFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_setting_header_profileImage"
                    android:layout_width="@dimen/img_circle_size"
                    android:layout_height="@dimen/img_circle_size"
                    android:src="@color/textPrimary"
                    android:layout_marginRight="@dimen/margin"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/item_setting_header_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:text="이동규"/>

                    <TextView
                        android:id="@+id/item_setting_header_id"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        style="@style/TextAppearance.MaterialComponents.Caption"
                        android:text="이동규"/>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구글 연동"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_setting_notice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_small_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_l"
                android:paddingRight="@dimen/margin"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:src="@drawable/round_home_black_18"
                    android:tint="@color/iconGray"
                    android:layout_marginRight="@dimen/margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="공지사항"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_setting_version"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_small_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_l"
                android:paddingRight="@dimen/margin"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:src="@drawable/round_info_black_18"
                    android:tint="@color/iconGray"
                    android:layout_marginRight="@dimen/margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="버전 정보"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:text="1.0.0"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_setting_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_small_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_l"
                android:paddingRight="@dimen/margin"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:src="@drawable/round_notifications_black_18"
                    android:tint="@color/iconGray"
                    android:layout_marginRight="@dimen/margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="알림"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_setting_inquire"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_small_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_l"
                android:paddingRight="@dimen/margin"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:src="@drawable/round_help_black_18"
                    android:tint="@color/iconGray"
                    android:layout_marginRight="@dimen/margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="문의"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>