<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_group_groupTitleImage"
        android:layout_width="@dimen/img_circle_size"
        android:layout_height="@dimen/img_circle_size"
        android:src="@color/textPrimary"
        android:layout_marginRight="@dimen/margin"/>

    <TextView
        android:id="@+id/item_group_groupName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:text="토트넘"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_group_subscribeIcon"
            android:layout_width="@dimen/img_small"
            android:layout_height="@dimen/img_small"
            android:src="@drawable/round_favorite_border_black_24"
            android:layout_marginRight="@dimen/margin_s"
            android:layout_marginLeft="@dimen/margin"
            android:tint="@color/textGray"/>

        <TextView
            android:id="@+id/item_group_numOfSubscriber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/font_body2"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:text="20k"/>

    </LinearLayout>

</LinearLayout>
